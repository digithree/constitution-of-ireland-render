{{#each items}}
	<li {{this.direction}}>
		<div class="timeline-image">
			<img class="img-circle img-responsive" 
					src="img/categories/{{this.category}}.png"
					alt="">
		</div>
		<div class="timeline-panel">
			<div class="timeline-heading">
				<h4>{{this.datetime}}</h4>
				<h4 class="subheading">{{this.committer}}</h4>
			</div>
			<div class="timeline-body">
				<p class="text-muted">
					{{this.message}}
					<br />
					<a href="{{this.commit-link}}" target="_blank">Link to commit</a>
				</p>
			</div>
		</div>
	</li>
{{/each}}